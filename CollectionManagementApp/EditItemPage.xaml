<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CollectionManagementApp.EditItemPage">

    <StackLayout>
        <Entry Placeholder="Name" Text="{Binding Name}" x:Name="NameEntry"/>
        <Entry Placeholder="Description" Text="{Binding Description}" x:Name="DescriptionEntry"/>
        <Button Text="Save" Clicked="SaveButton_Clicked"/>
        <Button Text="Delete" Clicked="DeleteButton_Clicked"/>
       
    </StackLayout>

</ContentPage>
